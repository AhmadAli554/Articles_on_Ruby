 <div class="row">
    <div class="col-xs-12'">
      <%= form_for(@article,:html =>{class: 'form',role: "form"}) do |form| %>
        <%= render 'shared/errors', obj: @article %>

        <div class="form-group row">

            <div class="col-xl-2 col-form-label">
              <%= form.label :title %>
            </div>
            <div class="col-xl-10">
              <%= form.text_field :title ,class: "form-control",placeholder: "Title of article", autofocus:true%>
            </div>

        </div>
        <div class="form-group row">

            <div class="col-sm-3 col-form-label">
              <%= form.label :description %>
            </div>
            <div class="col-sm-9">
              <%= form.text_area :description, rows:5 ,class: "form-control",placeholder: "Description of article"%>
            </div>

        </div>
        <div class="form-group row">
          <div class="col-sm-offset-4 col-sm-10">

              <%= form.submit class:"btn btn-primary"%>

          </div>
        </div>
      <% end %>
    </div>
  </div>
